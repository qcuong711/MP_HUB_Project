{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "IdentityServer": {
    "IssuerUri": "http://localhost:5001",
    "Port": 5001,
    "Clients": {
      "Gateway": {
        "ClientId": "gateway",
        "ClientName": "Frontend Gateway",
        "ClientSecret": "secret",
        "RedirectUris": [
          "http://localhost:3000/api/auth/callback/identityserver",
          "http://localhost:3000/dashboard"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:3000",
          "http://localhost:3000/dashboard"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:3000"
        ]
      },
      "HRM": {
        "ClientId": "hrm-client",
        "ClientName": "HRM Application",
        "ClientSecret": "",
        "RedirectUris": [
          "http://localhost:3001/dashboard",
          "http://localhost:3001/auth/callback"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:3001",
          "http://localhost:3001/"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:3001"
        ]
      }
    },
    "TestUsers": [
      {
        "SubjectId": "1",
        "Username": "admin",
        "Password": "123456",
        "Name": "Administrator",
        "Email": "admin@example.com",
        "Role": "Admin"
      }
    ]
  },
  
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:5001"
    ]
  },
  
  "OAuth": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
    }
  }
}
