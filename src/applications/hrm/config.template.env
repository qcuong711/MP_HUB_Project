# HRM Application Configuration Template
# Copy to .env.local for development or .env.production for production

# App Settings
APP_PORT=3001
APP_URL=http://localhost:3001
NODE_ENV=development

# Identity Server Configuration
IDENTITY_SERVER_URL=http://localhost:5001
IDENTITY_CLIENT_ID=hrm-client
IDENTITY_CLIENT_SECRET=
IDENTITY_SCOPE=openid profile email hrm

# Gateway Configuration  
GATEWAY_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://app.edu.vn:3000

# API Configuration (for future use)
API_BASE_URL=http://localhost:8000/api
API_TIMEOUT=30000

# Production Example:
# APP_URL=https://hrm.yourdomain.com
# IDENTITY_SERVER_URL=https://identity.yourdomain.com
# GATEWAY_URL=https://app.yourdomain.com
# ALLOWED_ORIGINS=https://app.yourdomain.com,https://hrm.yourdomain.com 